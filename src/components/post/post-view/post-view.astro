---
import { Divider } from '@/components/ui';

import PostViewContent from './post-view-content.astro';
import PostViewEditContent from './post-view-edit-content.astro';
import PostViewHeader from './post-view-header.astro';
import PostViewSources from './post-view-sources/post-view-sources.astro';

import type { Post } from '@/types/post';

interface Props {
	readonly post: Post;
}

const { post } = Astro.props;
---

<article class="flex flex-col gap-y-inherit">
	<PostViewHeader post={post} />
	<PostViewContent post={post} />
	<Divider />
	<PostViewSources post={post} />
	<Divider />
	<PostViewEditContent post={post} />
	<Divider />
</article>
