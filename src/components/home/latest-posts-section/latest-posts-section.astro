---
import { Container } from '@/components/ui';
import { getPosts } from '@/lib/posts';

// import LatestPostsSectionFooter from './latest-posts-section-footer.astro';
import LatestPostsSectionHeader from './latest-posts-section-header/latest-posts-section-header.astro';
import LatestPostsSectionList from './latest-posts-section-list/latest-posts-section-list.astro';

const posts = await getPosts();
---

<Container as="section" id="latest-posts-section" class="mt-30">
	<LatestPostsSectionHeader />
	<LatestPostsSectionList posts={posts} />
	<!-- <LatestPostsSectionFooter posts={posts} /> -->
</Container>
