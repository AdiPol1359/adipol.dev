---
import { Lines, Wave, Waves } from '@/components/decorations';

interface Props {
	readonly withBottomWave: boolean;
}

const BASE_WRAPPER_STYLES =
	'pointer-events-none absolute inset-x-0 flex justify-center overflow-hidden select-none';
---

<div class:list={[BASE_WRAPPER_STYLES, 'top-0']}>
	<Lines class="w-full max-w-340 min-w-200" />
</div>

<div class:list={[BASE_WRAPPER_STYLES, 'top-0']}>
	<Waves class="w-full min-w-400" />
</div>

{
	Astro.props.withBottomWave && (
		<div class:list={[BASE_WRAPPER_STYLES, 'top-3/5']}>
			<Wave class="w-full min-w-450" />
		</div>
	)
}
