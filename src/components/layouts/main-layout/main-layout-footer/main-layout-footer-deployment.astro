---
import PoweredByVercel from '@/assets/svgs/powered-by-vercel.svg';
import { Text } from '@/components/ui';

const gitCommitRef = import.meta.env.PUBLIC_VERCEL_GIT_COMMIT_REF;
const gitCommitSha = import.meta.env.PUBLIC_VERCEL_GIT_COMMIT_SHA;
---

<div
	class="flex flex-col items-center gap-y-3 laptop:relative laptop:items-end"
>
	{
		gitCommitRef && gitCommitSha && (
			<Text align="center" break="all" color="tertiary">
				{gitCommitRef} | {gitCommitSha}
			</Text>
		)
	}
	<a href="https://vercel.com/" target="_blank">
		<PoweredByVercel aria-label="ObsÅ‚ugiwane przez Vercel" />
	</a>
</div>
