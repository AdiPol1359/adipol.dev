---
import { Image } from 'astro:assets';

import backhandIndexPointingLeft from '@/assets/images/emojis/backhand-index-pointing-left.png';
import backhandIndexPointingRight from '@/assets/images/emojis/backhand-index-pointing-right.png';
import books from '@/assets/images/emojis/books.png';
import callMeHand from '@/assets/images/emojis/call-me-hand.png';
import cryingFace from '@/assets/images/emojis/crying-face.png';
import fire from '@/assets/images/emojis/fire.png';
import gemStone from '@/assets/images/emojis/gem-stone.png';
import graduationCap from '@/assets/images/emojis/graduation-cap.png';
import hourglass from '@/assets/images/emojis/hourglass.png';
import laptop from '@/assets/images/emojis/laptop.png';
import partyPopper from '@/assets/images/emojis/party-popper.png';
import raisedHand from '@/assets/images/emojis/raised-hand.png';
import wavingHand from '@/assets/images/emojis/waving-hand.png';

const EMOJIS = {
	'📚': books,
	'🔥': fire,
	'💎': gemStone,
	'🎓': graduationCap,
	'⌛️': hourglass,
	'💻': laptop,
	'🎉': partyPopper,
	'😭': cryingFace,
	'👈🏻': backhandIndexPointingLeft,
	'👉🏻': backhandIndexPointingRight,
	'🤙🏻': callMeHand,
	'✋🏻': raisedHand,
	'👋🏻': wavingHand,
};

interface Props {
	readonly size?: number;
	readonly type: keyof typeof EMOJIS;
}

const { size = 32, type } = Astro.props;

const emoji = EMOJIS[type];
---

<Image
	alt={type}
	draggable={false}
	layout="fixed"
	src={emoji}
	width={size}
	height={size}
	class="-mt-0.75 inline-block size-text"
/>
