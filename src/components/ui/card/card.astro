---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<T extends HTMLTag> = Polymorphic<{ as: T }>;

const { as: Tag = 'div', ...props } = Astro.props as Props<'div'>;
---

<Tag
	class="flex h-full flex-col gap-y-6 rounded-xl border border-border-secondary bg-surface-tertiary p-2.5 laptop:p-4"
	{...props}
>
	<slot />
</Tag>
