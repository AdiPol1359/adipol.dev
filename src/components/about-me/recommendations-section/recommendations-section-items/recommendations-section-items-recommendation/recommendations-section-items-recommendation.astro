---
import { Paper } from '@/components/ui';

import RecommendationsSectionItemsRecommendationContent from './recommendations-section-items-recommendation-content.astro';
import RecommendationsSectionItemsRecommendationDecoration from './recommendations-section-items-recommendation-decoration.astro';
import RecommendationsSectionItemsRecommendationHeader from './recommendations-section-items-recommendation-header.astro';

import type { Recommendation } from '@/types/recommendation';

interface Props {
	readonly recommendation: Recommendation;
}

const {
	recommendation: { content, linkedIn, name, photo, position },
} = Astro.props;
---

<Paper as="article" class="relative space-y-4">
	<RecommendationsSectionItemsRecommendationDecoration />
	<RecommendationsSectionItemsRecommendationHeader
		linkedIn={linkedIn}
		name={name}
		photo={photo}
		position={position}
	/>
	<RecommendationsSectionItemsRecommendationContent content={content} />
</Paper>
